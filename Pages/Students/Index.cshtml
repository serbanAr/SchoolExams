@page "/"
@model SchoolExams.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Field.FieldName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Field.FieldName)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
